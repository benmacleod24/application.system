generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Community {
  communityId   String @id @default(cuid())
  communityName String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members Community_Member[]
}

model Community_Member {
  memberId    String   @default(cuid())
  communityId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  community Community @relation(fields: [communityId], references: [communityId])

  @@id([memberId, communityId])
}
